<div class="container-xl p-3">
  <div class="card mb-3">
<!--     <img src="..." class="card-img-top" alt="..." >-->
    <%= image_tag "https://source.unsplash.com/500x400/?#{@cocktail.name}", class: 'card-img-top' %>
    <div class="card-body">
      <h5 class="card-title"><%= @cocktail.name %></h5>
      <p class="card-text">
        <ul>
          <% @cocktail.doses.each do |dose| %>
            <li><%= dose.ingredient.name %> | <%= dose.description %>
            <%= link_to "(delete)",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
            </li>
          <% end %>
        </ul>
      </p>
      <%= link_to 'Add Dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
      <%= link_to 'Back', cocktails_path, class: 'btn btn-primary' %>

    </div>
  </div>
</div>
